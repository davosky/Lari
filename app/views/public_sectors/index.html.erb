<div class="col">
  <p class="mb-3">
    <%= image_tag("public_sector_index_logo.png", class: "img-fluid") %>
    <span class="float-end">
      <span class="float-right">
        <%= link_to new_public_sector_path, "data-controller": "turbo", class: "btn btn-sm btn-primary shadow" do %>
          <i class="fa-solid fa-building"></i>
          &nbsp;
          <i class="fa-solid fa-plus"></i>
          &nbsp;
          Inserisci un Nuovo Settore Publico
        <% end %>
      </span>
    </p>
    <hr class="hr-primary"/>
    <% @public_sectors.each do |public_sector| %>
      <div class="card m-2 shadow border-light">
        <div class="card-body card-body-animated">
          <%= public_sector.position %>
          &emsp;
          <%= public_sector.name %>
          <span class="float-end">
            <%= link_to edit_public_sector_path(public_sector), "data-controller": "turbo" , 
            "data-bs-toggle": "tooltip", 
            "title": "Modifica il Record Corrente" do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
            &emsp;
            <%= link_to public_sector_path(public_sector),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Sicuri di voler eliminare il record corrente?" , 
            "data-bs-toggle": "tooltip", 
            "title": "Elimina il Record Corrente" do%>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <br>
    <%= paginate @public_sectors %>
  </div>
