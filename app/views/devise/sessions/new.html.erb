<div class="row justify-content-center mt-5 pt-5">
  <div class="col">
    <div class="my-5">
      <div class="p-0">
        <div class="row rounded-border">
          <div class="col bg-login-image"></div>
          <div class="col">
            <div class="p-5">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
                <div class="form-group mb-3">
                  <%= f.label :username %>&nbsp;:<br />
                  <%= f.text_field :username, autofocus: true, autocomplete: "email", class:"form-control form-control-user shadow" %>
                </div>
                <div class="form-group mb-3">
                  <%= f.label :password %>&nbsp;:<br />
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-user shadow" %>
                </div>
                <div class="form-group mb-3">
                </div>
                <div class="d-grid">
                  <%= f.submit "Log in", class: "btn btn-primary btn-user btn-block shadow" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
