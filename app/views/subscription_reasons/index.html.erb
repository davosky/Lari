<div class="col">
  <p class="mb-3">
    <%= image_tag("subscription_reason_index_logo.png", class: "img-fluid") %>
    <span class="float-end">
      <span class="float-right">
        <%= link_to new_subscription_reason_path, "data-controller": "turbo", class: "btn btn-sm btn-primary shadow" do %>
          <i class="fa-solid fa-file-circle-question"></i>
          &nbsp;
          <i class="fa-solid fa-plus"></i>
          &nbsp;
          Inserisci un Nuovo Motivo Sottoscrizione
        <% end %>
      </span>
    </p>
    <hr class="hr-primary"/>
    <% @subscription_reasons.each do |subscription_reason| %>
      <div class="card m-2 shadow border-light">
        <div class="card-body card-body-animated">
          <%= subscription_reason.position %>
          &emsp;
          <%= subscription_reason.name %>
          <span class="float-end">
            <%= link_to edit_subscription_reason_path(subscription_reason), "data-controller": "turbo" , 
            "data-bs-toggle": "tooltip", 
            "title": "Modifica il Record Corrente" do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
            &emsp;
            <%= link_to subscription_reason_path(subscription_reason),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Sicuri di voler eliminare il record corrente?" , 
            "data-bs-toggle": "tooltip", 
            "title": "Elimina il Record Corrente" do%>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <br>
    <%= paginate @subscription_reasons %>
  </div>
