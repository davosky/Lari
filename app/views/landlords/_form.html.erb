<%= form_with(model: landlord) do |form| %>
  <% if landlord.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(landlord.errors.count, "error") %> Errore!&emsp;Non posso salvare per i seguenti motivi:</h2>
      <ul>
        <% landlord.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class='col'>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-venus-mars"></i>
          &emsp;Tipo Locatore
        </span>
        <%= form.collection_select(:landlord_type_id, LandlordType.all, :id, :name, {:include_blank => true}, {:class => "form-select text-primary"}) %>
      </div>
    </div>
  </div>
  <hr/>
  <div class='row'>
    <div class='col'>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-industry"></i>
          &emsp;Ragione Sociale
        </span>
        <%= form.text_field :company_name, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-credit-card"></i>
          &emsp;Patrita IVA
        </span>
        <%= form.text_field :vat_number, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-id-card"></i>
          &emsp;Codice Fiscale
        </span>
        <%= form.text_field :fiscal_code, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-user"></i>
          &emsp;Nome
        </span>
        <%= form.text_field :first_name, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-regular fa-user"></i>
          &emsp;Cognome
        </span>
        <%= form.text_field :last_name, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-venus-mars"></i>
          &emsp;Sesso
        </span>
        <%= form.collection_select(:sex_id, Sex.all, :id, :name, {:include_blank => true}, {:class => "form-select text-primary"}) %>
      </div>
    </div>
    <div class='col'>
      <div class="input-group mb-1">
        <span class="input-group-text">
          <i class="fa-solid fa-home"></i>
          &emsp;Indirizzo
        </span>
        <%= form.text_field :address, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-house-chimney-window"></i>
          &emsp;Civico
        </span>
        <%= form.text_field :house_number, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-envelope"></i>
          &emsp;C.A.P.
        </span>
        <%= form.text_field :zip, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-city"></i>
          &emsp;Comune
        </span>
        <%= form.text_field :city, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-map-location"></i>
          &emsp;Provincia
        </span>
        <%= form.text_field :province, class: "form-control text-primary" %>
      </div>
    </div>
  </div>
  <hr/>
  <div class='row'>
    <div class='col'>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-phone"></i>
          &emsp;Telefono
        </span>
        <%= form.text_field :phone, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text input-group-text-fixed">
          <i class="fa-solid fa-mobile-screen"></i>
          &emsp;Cellulare
        </span>
        <%= form.text_field :mobile, class: "form-control text-primary" %>
      </div>
      <div class="input-group mb-1">
        <span class="input-group-text">
          <i class="fa-solid fa-at"></i>
          &emsp;E-Mail
        </span>
        <%= form.text_field :email, class: "form-control text-primary" %>
      </div>
    </div>
    <div class='col'>
    </div>
  </div>
  <hr/>
  <div class='row'>
    <div class='col'>
      <div class="d-grid">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
